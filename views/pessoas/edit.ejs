<%- include('../partials/header') %>

<h1>Pessoas</h1>
<p><a href="/pessoas">Voltar Ã  lista de pessoas</a></p>
<form method="POST">
  <div class="form-group">
    <label for="name">Nome:</label>
    <input type="text" class="form-control" id="name" name="nome" placeholder="Digite seu nome" value="<%= pessoa.nome %>">
  </div>
  <div class="form-group">
    <label for="cargo">Cargo:</label>
    <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Digite seu cargo" value="<%= pessoa.cargo %>">
  </div>
  <div class="form-group">
    <label for="nascimento">Nascimento:</label>
    <input type="date" class="form-control" id="nascimento" name="nascimento" value="<%= formatedDate %>">
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>

